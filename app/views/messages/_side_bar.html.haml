.side-bar
  .side-bar__box
    .top-items
      .top-items__name
        = current_user.name
      %ul.top-items__icon
        %li.top-items__icon__new-group
          = link_to new_group_path do
            = icon('fas', 'layer-group', class: 'icon') 
        %li.top-items__icon__edit
          = link_to edit_user_path(current_user) do
            = icon('fas', 'wrench', class: 'icon')

  .groups
    - current_user.group.each do |groups|
      .group
        = link_to group_messages_path(groups) do
          .group__name
            = groups.name
          .group__message
            NO MESSAGE
