.main-chat
  .main-chat__mainheader
    .main-chat__mainheader__name
      .main-chat__mainheader__name__grouptype
        = @group.name
      .main-chat__mainheader__name__member
        Member:
        .main-chat__mainheader__name__member__user
        - @group.users.each do |user|
          = user.name
    .main-chat__mainheader__editbtn
      = link_to edit_group_path(current_user), class: "edit-page" do
        edit
  .message_list
    = render @messages
  .message-form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :text, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas','image', class: 'icon')
          = f.file_field :image, class: 'input-box__hidden'
      = f.submit 'Send', class: 'submit-btn' 